
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "devise-form"}) do |f| %>
<h2>Sign up</h2>
<%= f.error_notification %>

<div class="form-inputs">
  <%= f.input :email, required: true, autofocus: true, input_html: {placeholder: "bob@gmail.com"} %>
  <div class="same-line">
  <%= f.input :first_name, required: true, input_html: {placeholder: "Bob"} %>
  <%= f.input :last_name, required: true, input_html: {placeholder: "Smith"} %>
  </div>
  <%= f.input :password, required: true, input_html: {placeholder: "********"}, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
  <%= f.input :password_confirmation, required: true, input_html: {placeholder: "********"} %>
</div>

<div class="form-actions">
  <%= f.button :submit, "Sign up" %>
</div>
<div class="other-actions">

  <%= render "devise/shared/links" %>
</div>

<% end %>

