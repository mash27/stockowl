
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "devise-form"}) do |f| %>
<h2 class="login-style">Log in</h2>
<div class="form-inputs">
<%= f.input :email, required: false, autofocus: true, input_html: {placeholder: "bob@gmail.com"} %>
  <%= f.input :password, required: false, input_html: {placeholder: "********"} %>
  <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
</div>

<div class="form-actions">
  <%= f.button :submit, "Log in" %>
</div>
<div class="other-actions">
  <%= render "devise/shared/links" %>
</div>
<% end %>

