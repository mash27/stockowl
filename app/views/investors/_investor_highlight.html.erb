  <div class="preview-box">
    <div id="preview" class="investor-card-highlighted">

      <div class="top-items">
        <div class="content">
          <div class="card-image" data-image="<%= image_path @investors.first.photo %>" style="background-image:url('<%= image_path @investors.first.photo %>');"></div>
          <a class="card-link" href="#" ></a>
          <h3 class="i-name"><%= @investors.first.first_name %> <%= @investors.first.last_name %></h3>
          <p class="f-name"><%= @investors.first.fund_name %></p>
          <p class="p-value"><%= @investors.first.portfolio_value %></p>
          <div class="view-btn-container">
            <%= link_to "See more", @investors.first, class: "view-btn view-btn-blue"%>
          </div>
        </div>
        <div class="right">
          <div class="preview-title" id="top-5">
            <div class="w3-content" style="max-width:700px">
              <h5 class="investor-title"><span class="w3-tag title">TOP HOLDINGS</span></h5>
            </div>
          </div>
          <ul class="stocks"></ul>
        </div>
      </div>
      <p class="description"> <%= @investors.first.description.split(" ").first(30).join(" ") %>...
      </p>
    </div>
  </div>
